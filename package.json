{
  "name": "systemic",
  "version": "3.3.2",
  "description": "A minimal dependency injection library for node",
  "main": "index.js",
  "scripts": {
    "test": "mocha test",
    "lint": "eslint .",
    "coverage": "nyc --report html --reporter lcov --reporter text-summary mocha test",
    "codeclimate": "(test -e .codeclimate && npm run coverage && source .codeclimate) || echo skipping codeclimate"
  },
  "keywords": [
    "dependency",
    "injection",
    "context",
    "inversion of control",
    "graceful",
    "start up",
    "shutdown",
    "ioc",
    "boot"
  ],
  "author": "GuideSmiths Ltd",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-imperative": "^3.0.0",
    "eslint-plugin-imperative": "^3.0.0",
    "husky": "^4.2.3",
    "mocha": "^7.1.1",
    "nyc": "^15.0.0"
  },
  "dependencies": {
    "async": "^3.2.0",
    "chance": "^1.1.4",
    "debug": "^4.1.1",
    "lodash.assign": "^4.2.0",
    "lodash.defaults": "^4.2.0",
    "lodash.find": "^4.6.0",
    "lodash.get": "^4.4.2",
    "lodash.has": "^4.5.2",
    "lodash.intersection": "^4.4.0",
    "lodash.isfunction": "^3.0.9",
    "lodash.map": "^4.6.0",
    "lodash.set": "^4.3.2",
    "lodash.toarray": "^4.4.0",
    "require-all": "^3.0.0",
    "toposort-class": "^1.0.1"
  },
  "directories": {
    "example": "examples",
    "test": "tests"
  },
  "engines": {
    "node": ">6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guidesmiths/systemic.git"
  },
  "bugs": {
    "url": "https://github.com/guidesmiths/systemic/issues"
  },
  "homepage": "https://guidesmiths.github.io/systemic/",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm test",
      "pre-push": "npm run codeclimate"
    }
  }
}
